CREATE DATABASE clinica_psicologica;
USE clinica_psicologica;

CREATE TABLE psicologa (
    id_psicologa INT AUTO_INCREMENT PRIMARY KEY,
    nome VARCHAR(100) NOT NULL,
    crp VARCHAR(20) UNIQUE NOT NULL
);

CREATE TABLE paciente (
    id_paciente INT AUTO_INCREMENT PRIMARY KEY,
    nome VARCHAR(100) NOT NULL,
    telefone VARCHAR(20),
    email VARCHAR(100) UNIQUE NOT NULL
);

CREATE TABLE consulta (
    id_consulta INT AUTO_INCREMENT PRIMARY KEY,
    id_psicologa INT NOT NULL,
    id_paciente INT NOT NULL,
    data DATE NOT NULL,
    horario TIME NOT NULL,
    valor DECIMAL(10,2),

    FOREIGN KEY (id_psicologa) REFERENCES psicologa(id_psicologa),
    FOREIGN KEY (id_paciente) REFERENCES paciente(id_paciente)
);
